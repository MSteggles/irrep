  0.082   0.582   0.750
  0.418   0.918   0.750
  0.250   0.250   0.078
  0.750   0.750   0.422
  0.750   0.750   0.922
  0.250   0.250   0.578

#====================CONVERGENCE ==============================================================================================

ecut 500 eV
pawecutdg 1000 eV
nstep 200
occopt 4 #Cold-smearing (Marzari) METALS
tsmear 0.001 #smearing (10 times smaller than default)
enunit 1
nband 166

iscf1 17
kptopt1 4
ngkpt1 5 5 7
toldfe1 1.0d-11
prtwf1 0
#irdden1 1

iscf2 -2
getden2 -1
kptopt2 -11
ndivk2 60 60 80 120 60 60 80 1 120 1 120   
kptbounds2  0.0 0.0 0.0 #Gamma
            0.0 0.5 0.0 #X
            0.5 0.5 0.0 #M
            0.0 0.0 0.0 #Gamma
            0.0 0.0 0.5 #Z
            0.0 0.5 0.5 #R
            0.5 0.5 0.5 #A
            0.0 0.0 0.5 #Z
            0.0 0.5 0.0 #X
            0.0 0.5 0.5 #R
            0.5 0.5 0.0 #M
            0.5 0.5 0.5 #A
tolwfr2 1.0d-5
prtwf2 1
nbdbuf 10
